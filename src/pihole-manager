function __root_check () {

	# Some commands require root access in order to function propertly. Only
	# those that require well check for permissions.
	! test "${EUID}" -eq "0" && echo "root premission required!" && exit 1

}

function __health_check () {

	# Check if Pihole is up and running: If not enable, however exit with error.
	# If Pihole is running normally do nothing.
	if test "$(pihole status | grep 'Pihole blocking is disabled')" ||
	   test "$(pihole status | grep 'DNS service is NOT running')"; then
		echo "(${__name} Error) not enabled - $(date -R)" >> ${__logging}
		pihole enable & sleep 5s && exit 1
	fi

}

function __pihole_gravity () {

	# Update the gravity and sleep at the sametime for 10s.
	if pihole updateGravity > /dev/null & sleep 10s ; then
		echo "(${__name}) Gravity Updated - $(date -R)" >> ${__logging}
	fi

}

function __pihole_firmware () {

	# Get both the current and last versions.
	while read -r __line ; do
		__current="${__current} $(echo "$__line" | awk '{print $4}' | tr -d 'v:)')"
		__latest="${__latest} $(echo "$__line" | awk '{print $6}' | tr -d 'v:)')"
	done < <(pihole version)

	# If any part of pihole is out dated then update as a hole.
	if test "${__current}" != "${__latest}" ; then

		# Update and sleep for 90 seconds at the sametime.
		if pihole updatePihole > /dev/null & sleep 90s ; then
			echo "(${__name}) Updated - $(date -R)" >> ${__logging}
			reboot
		fi

	# If Pihole is up-to-date, then simply log that it is.
	elif test "${__current}" = "${__latest}" ; then
		echo "(${__name}) Update to date - $(date -R)" >> ${__logging}
	fi

}

set -e

__name="pihole-manager"

__logging="/var/log/pihole-manager.log"		# Log every this script does.

# Basic info
__info=$(cat <<EOF
${__name} - version (${version})
EOF
)

# The help and basic info.
__help=$(cat <<EOF
${info}

usage: ${__name} command
usage: ${__name} command <option>

commands

	update <option>		Update Pihole or just the Gravity.

	clear			Clear Pihole logs.

	log			View log file generator by pihole-manager.

	help			Shows the messages.

	version			Displays version info.

options
	--gravity		Update Pihole gravity only.

	--firmware		Update Pihole firmware.

	--all			Update firmware and gravity.

pihole-server-updater homepage: <https://www.github.com/mschaecher78/pihole-server-updater/>
Copyright (C) 2021 <Michael L. Schaecher> MIT License
EOF
)

test ! -f ${__logging} && touch ${__logging}				# Create log file if it does not exit.

while true ; do case "${1}" in
	flush)
		! __root_check && exit 1				# Exit if fails.
		__health_check && shift 1				# shift one space over if health check passes.

		# If any one of the commands fail then error and exit dirty.
		if pihole flush && pihole arpflush  ; then
			echo "(Pihole) logs flushed             - $(date -R)" >> ${__logging}
			break
		else
			echo "(Pihole) Error: log flushed       - $(date -R)" >> ${__logging}
			exit 1
		fi

	;;
	log)
		cat "${__logging}" | less && break			# # Display log file using less command.
	;;
	help)
		echo "${__help}" && break				# Helpful tips
	;;
	update)
		! __root_check && exit 1				# Exit if fails.
		__health_check && shift 1				# shift one space over if health check passes.
	;;
	version)	echo "${__info}" && break			# Display name and version info
	;;
	--gravity)
		# The Pihole Gravity is really just a custom /etc/hosts file that redirects websites
		# that are listed to "0.0.0.0" which is, in a way a blackhole. Causing everything listed
		# to be sucked down into nothing.
		if ! __pihole_gravity ; then
			echo "(Pihole) Error: gravity update   - $(date -R)" >> ${__logging}
			exit 1
		fi

		break
	;;
	--firmware)
		# Lets just hope that this doesn't happen, but if the command does fail log and
		# exit with error. Otherwise nothing to see here.
		if ! __pihole_firmware ; then
			echo "(Pihole) Error: firmware update  - $(date -R)" >> ${__logging}
			exit 1
		fi

		 break
	;;
	--flush)
	;;
	--all)
		# If the first command completes without a hitch then move on to the next command.
		# Now if any one of the commands fail, exit with an error.
		if ! __pihole_gravity ; then
			echo "(Pihole) Error: gravity update - $(date -R)" >> ${__logging}
			exit 1
		else
			if ! __pihole_firmware ; then
				echo "(Pihole) Error: firmware update - $(date -R)" >> ${__logging}
				exit 1
			fi
		fi

		break
	;;
	*)
		echo "${__name} invalid command or option!" && exit 1	# Exit if ivalid command/option
	;;
esac done

exit 0
